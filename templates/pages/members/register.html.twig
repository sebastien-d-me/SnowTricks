{% extends "base.html.twig" %}
{% set pageId = "register" %}


{% block main %}
    {{ form_start(form) }}
        {{ form_row(form.username, {
            label: "Nom d'utilisateur"
        }) }}
        {{ form_row(form.email, {
            label: "Adresse email"
        }) }}
        {{ form_row(form.password, {
            label: "Mot de passe"
        }) }}
        {{ form_row(form.confirmPassword, {
            label: "Confirmer votre mot de passe"
        }) }}
        <button class="btn btn--fit" type="submit">Créer mon compte</button>
    {{ form_end(form) }}

    <a class="link" href="/connexion">J'ai déjà un compte</a>
{% endblock %}
