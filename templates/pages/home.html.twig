{% extends "base.html.twig" %}


{% block main %}
    <div class="home__banner">
        <img alt="Banner of the website" class="banner__image" loading="lazy" src="{{ asset('assets/images/home/banner.webp') }}">
        <span class="banner__text">Lorem, ipsum dolor.</span>
        <a class="banner__arrow link" href="#tricks__list">
            <i class="ri-arrow-down-line"></i>
        </a>
    </div>

    <div id="tricks__list">
        {% for trick in tricks | slice(0, 15) %}
            <div class="tricks__item">
                <img alt="" class="trick__image" loading="lazy" src="{{ asset('assets/images/tricks/placeholder/tail press.webp') }}">
                <div class="trick__informations">
                    <a class="link link--secondary" href="/trick/{{ trick.id }}">
                        <span class="trick__name">{{ trick.name }}</span>
                    </a>
                    <div class="trick__action">
                        <a class="link link--icon" href="/trick/edit/{{ trick.id }}">
                            <i class="ri-pencil-line"></i>
                        </a>
                        <a class="link link--icon" href="/trick/delete/{{ trick.id }}">
                            <i class="ri-delete-bin-line"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if tricks is empty %}
            <span>Aucun trick n'a été écrit pour le moment...</span>
        {% elseif tricks | length > 15 %}
            <div class="tricks__break"></div>
            <button class="btn btn__tricks">
                <i class="ri-refresh-line"></i>
                <span>Charger plus</span>
            </button>
        {% else %}
            <div class="tricks__break"></div>
        {% endif %}        
    </div>

    <a class="tricks__arrow link" href="#tricks__list">
        <i class="ri-arrow-up-line"></i>
    </a>
{% endblock %}